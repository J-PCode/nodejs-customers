doctype html
html
  head
    title Add customer
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body.container.w-50.p-3
    h1 New customer
    form(action='/addcustomer', method='POST')
      div.form-group.m-3
        label Firstname
        input(type="text", name="firstname").form-control
      div.form-group.m-3
        label Lastname
        input(type="text", name="lastname").form-control
      div.form-group.m-3
        label Email
        input(type="text", name="email").form-control
      div.form-group.m-3
        label Phone number
        input(type="number", name="phone").form-control
      div.m-3
        input(type="submit", value="Add").btn.btn-primary